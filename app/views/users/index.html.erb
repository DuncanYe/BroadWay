<div class="container">
  <h1 class="text-center">所有使用者</h1>
  <hr>
  <div class="row">
    <% @users.each do |user| %>
      <div class="col-md-4">
        <h4><%= link_to user.name, user_path(user) %></h4>
        <%= link_to user_path(user) do %>
          <%= image_tag user.avatar_url ,width: "200px" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
