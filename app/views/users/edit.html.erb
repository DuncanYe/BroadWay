<div class="container">
  <div class="row">
    <div class="col-md-4">
      
      <h2>Edit Profile</h2>
      <%= form_for @user do |f| %>

        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :intro %>
          <%= f.text_area :intro, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-dark' %>
        </div>

      <% end %>
    </div>
  </div>
</div>