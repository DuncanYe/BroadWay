<div class="col-md-10 col-md-offset-1">
  <%= form_for [@play, @review] do |f| %>

    <div class="form-gourp">
      <%= f.label :rating %>
      <%= f.text_field :rating, class: 'form-control' %>
    </div>
    <div class="form-gourp">
      <%= f.label :comment %>
      <%= f.text_area :comment, class: 'form-control' %>
    </div>
    <div class="form-gourp">
      <%= f.submit class: 'btn btn-secondary' %>
    </div>

  <% end %>
</div>