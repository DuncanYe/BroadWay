<div class="container">
  <h1>[ <%= params[:category] %> ]</h1>
  <br>
  <% if @play.count == 0 %>
    <h3>There are no plays in this category</h3>
  <% else %>
    <div class="row">
      <% @play.each do |play| %>
        <div class="col-md-3">
          <a href="/plays/ <%= play.id %>">
            <%=image_tag play.play_img.url(:medium), class: 'play' %>
          </a>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

