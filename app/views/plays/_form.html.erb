<%= form_for play do |f| %>

  <div class="form-group">
    <%= f.label :play_img, "Image" %>
    <%= f.file_field :play_img, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, "Select Category" %>
    <%= f.collection_select :category_id, Category.all, :id, :name, { promap: :true }, { class: 'form-control'} %>
  </div>
  
  <div class="form-group">
    <%= f.label :title, "Play Title" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description%>
    <%= f.text_area :description, class: 'form-control description' %>
  </div>

  <div class="form-group">
    <%= f.label :director%>
    <%= f.text_field :director, class: 'form-control' %>
  </div>
  
  <%= f.submit class: 'btn btn-primary' %>
  
<% end %>